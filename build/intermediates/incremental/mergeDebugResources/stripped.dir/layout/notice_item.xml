<?xml version="1.0" encoding="utf-8"?>

                                                        
    
                 
                       
                                                               
           

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardUseCompatPadding="true" android:tag="layout/notice_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/image_main"
                style="@style/popularImageCustomStyle"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:tag="binding_1"            />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/popularTextFrame"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="left">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/text_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textAlignment="gravity"
                        android:textSize="15sp"
                        android:tag="binding_2"        />

                    <ImageButton
                        style="@style/imageButtonCustomStyle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:tag="binding_3"                    />

                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_margin="5dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/text_board_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:singleLine="false"
                    android:textAlignment="gravity"
                    android:tag="binding_4"          />

                <TextView
                    android:layout_margin="5dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/text_board_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="false"
                    android:maxWidth="200dp"
                    android:textAlignment="gravity"
                    android:maxLines="2"
                    android:tag="binding_5"            />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
         