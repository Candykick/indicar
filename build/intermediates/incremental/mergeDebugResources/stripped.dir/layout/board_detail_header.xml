<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                 
                       
                                                             

                 
                        
                                                               
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary" android:tag="layout/board_detail_header_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/imageview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="binding_1"       />

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageButton
                style="@style/imageButtonCustomStyle"
                android:id="@+id/imagebutton_user_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:tag="binding_2"                     />

            <TextView
                style="@style/textViewBoardInfoStyle"
                android:id="@+id/textview_user_name"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@color/colorPrimary"
                android:tag="binding_3"         />

            <TextView
                android:layout_margin="3dp"
                android:textColor="@color/colorFont"
                android:id="@+id/text_board_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:tag="binding_4"           />

            <ImageButton
                android:id="@+id/button_menu"
                style="@style/imageButtonCustomStyle"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"/>

        </LinearLayout>

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/textViewBoardInfoStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorFontLight"
                android:text="좋아요"/>

            <TextView
                style="@style/textViewBoardInfoStyle"
                android:id="@+id/textview_like_count"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorFontLight"
                android:tag="binding_5"          />

            <TextView
                style="@style/textViewBoardInfoStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFontLight"
                android:layout_gravity="center_vertical"
                android:text="개"/>

            <TextView
                style="@style/textViewBoardInfoStyle"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="댓글"
                android:textColor="@color/colorFontLight"
                android:gravity="center_vertical"/>

            <TextView
                style="@style/textViewBoardInfoStyle"
                android:id="@+id/textview_comment_count"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorFontLight"
                android:tag="binding_6"             />

            <TextView
                style="@style/textViewBoardInfoStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorFontLight"
                android:text="개"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                style="@style/textViewBoardInfoStyle"
                android:id="@+id/lastDate"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:textColor="@color/colorFontLight"
                android:tag="binding_7"      />

        </LinearLayout>

        <TextView
            style="@style/textViewBoardContentStyle"
            android:id="@+id/textview_main"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="binding_8"           />

    </LinearLayout>
         