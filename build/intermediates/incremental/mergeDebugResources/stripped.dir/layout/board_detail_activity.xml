<?xml version="1.0" encoding="utf-8"?>

                                                 
                                                        

    
                                          

                 
                            
                                                                                       
           

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/board_detail_activity_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:tag="binding_1"                             
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryBackground"
            android:gravity="center">

            <ProgressBar
                style="@style/Base.Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:tag="binding_2"                              
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <include
                android:id="@+id/board_content"
                layout="@layout/board_detail_content_layout"
                                             
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:tag="binding_3"                                                            
                android:id="@+id/linearLayout">

                <ImageButton
                    style="@style/imageButtonCustomStyle"
                    android:id="@+id/imagebutton_like"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:tag="binding_4"                                                 
                                                              
                    android:src="@drawable/like_button_toggle"/>

                <ImageButton
                    style="@style/imageButtonCustomStyle"
                    android:id="@+id/imagebutton_comment"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:tag="binding_5"                                                    
                    android:src="@drawable/btn_comment_unclicked"/>

            </LinearLayout>
<!--

            <ImageButton
                style="@style/imageButtonCustomStyle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/button_goto_top"
                android:onTouch="@{(v, event) -> viewModel.onFashUpClick(v, event, boardContent.recyclerviewBoardContainer)}"
                android:visibility="@{viewModel.isPageUpScrolling}"/>
-->

        </RelativeLayout>
    </FrameLayout>
         