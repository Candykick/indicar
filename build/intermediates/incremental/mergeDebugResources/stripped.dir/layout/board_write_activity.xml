<?xml version="1.0" encoding="utf-8"?>

                                                         

    
                                          
                 
                            
                                                                                     
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/board_write_activity_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto">

        <!-- intro 페이지 일때 visible -->
        <include
            android:id="@+id/intro"
            layout="@layout/board_write_intro_layout"
                                         
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
                                                                                    />

        <!-- deatil 페이지 일때 visible -->
        <include
            android:id="@+id/detail"
            layout="@layout/board_write_detail_layout"
                                         
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
                                                                                    />

        <!-- intro 페이지 일때 visible -->
        <ImageButton
            style="@style/imageButtonCustomStyle"
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_next"
            android:tag="binding_1"                                    
                                                                                    />

        <!-- deatil 페이지 일때 visible -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:tag="binding_2"                                                 >

            <ImageButton
                style="@style/imageButtonCustomStyle"
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="binding_3"                                      
                android:src="@drawable/btn_quit"/>

            <ImageButton
                style="@style/imageButtonCustomStyle"
                android:id="@+id/button_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="binding_4"                                      
                android:src="@drawable/btn_upload_board"/>

        </LinearLayout>
    </LinearLayout>
         