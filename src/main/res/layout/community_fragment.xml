<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_board_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="2dp"
            android:background="@drawable/border_underline_grey"
            app:tabBackground="@drawable/border_underline_grey"
            app:tabGravity="center"
            app:tabMinWidth="88dp"
            app:tabPadding="5dp"
            app:tabIndicatorColor="#454545"
            app:tabIndicatorHeight="2dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_board"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_write"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:layout_margin="20dp"
        android:background="@drawable/border_circle_white"
        android:src="@drawable/btn_write_board"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_gravity="right|bottom"/>

    </FrameLayout>
</layout>